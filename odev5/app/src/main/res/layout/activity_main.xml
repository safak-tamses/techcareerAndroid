<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    android:backgroundTint="#B7CDCB"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="364dp"
        android:layout_height="482dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:columnCount="5"
        android:rowCount="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSonuc"
        tools:ignore="MissingConstraints">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="1"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="2"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="3"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sifirla"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sil"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="Sil"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_topla"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="+"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="7"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="8"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="2"
            android:text="9"
            android:textSize="24sp"
            app:backgroundTint="#F47836" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sonuc"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="3"
            android:text="="
            android:textSize="24sp"
            app:backgroundTint="#F47836" />


    </GridLayout>

    <TextView
        android:id="@+id/textViewBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-thin"
        android:text="Basit Hesap Makinası"
        android:textColor="#F47836"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Toplam = "
        android:textColor="#F47836"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextSonuc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBaslik" />

    <EditText
        android:id="@+id/editTextSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="sonuç"
        android:inputType="text"
        android:textColor="#F47836"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSonuc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewSonuc"
        app:layout_constraintTop_toBottomOf="@+id/textViewBaslik" />


</androidx.constraintlayout.widget.ConstraintLayout>