<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DetaysayfaFragment">

    <ImageView
        android:id="@+id/imageViewUrununResmi"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Ürün Detay"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewUrunTutar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0 ₺"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewUrununResmi"
        app:layout_constraintStart_toStartOf="@+id/imageViewUrununResmi"
        app:layout_constraintTop_toBottomOf="@+id/textViewUrunIsmi" />

    <TextView
        android:id="@+id/textViewUrunIsmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Izgara Somon"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewUrununResmi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/imageViewUrununResmi"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUrununResmi" />

    <ImageView
        android:id="@+id/imageViewEksi"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/eksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUrunTutar" />

    <TextView
        android:id="@+id/textViewAdet"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEksi"
        app:layout_constraintStart_toEndOf="@+id/imageViewEksi"
        app:layout_constraintTop_toTopOf="@+id/imageViewEksi" />

    <Button
        android:id="@+id/buttonSepeteUrunuEkle"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:text="Sepete Ekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewToplam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="0 ₺"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEksi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewEksi" />

    <ImageView
        android:id="@+id/imageViewrti"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEksi"
        app:layout_constraintStart_toEndOf="@+id/textViewAdet"
        app:layout_constraintTop_toTopOf="@+id/imageViewEksi" />

</androidx.constraintlayout.widget.ConstraintLayout>